<section class="bg-blue-baby py-12 lg:py-24 flex flex-col gap-y-12 lg:gap-y-16">
  {% for row in rows %}
    <article class="fluid-grid">
      <div class="span-content grid grid-cols-subgrid gap-y-6">
        {{ ResponsiveImage(row.image, {
          class: 'col-span-12 lg:col-span-7 w-full aspect-video object-cover' ~ (loop.index is even ? ' lg:hidden'),
        }) }}
        <div class="col-span-12 lg:col-span-5 self-center flex flex-col">
          <h2 class="text-h3 text-balance">{{ row.heading }}</h2>
          <div class="w-full h-1 bg-linear-to-r gradient-light my-2.5"></div>
          <p class="text-body-medium">{{ row.body }}</p>
          {% if row.links|length %}
            <div class="mt-3">
              {% for item in row.links %}
                {% if item.link %}
                  {{ include('partials/arrow-link-large.twig', {
                    ...item.link,
                    link: item.link.url
                  }) }}
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
        {% if loop.index is even %}
        {{ ResponsiveImage(row.image, {
          class: 'col-span-12 lg:col-span-7 hidden w-full aspect-video object-cover lg:block',
        }) }}
        {% endif %}
      </div>
    </article>
  {% endfor %}
</section>
