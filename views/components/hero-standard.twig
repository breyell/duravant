<section class="">
  <div class="fluid-grid">
    <div class="span-content">
      {{ include('partials/breadcrumbs.twig') }}
    </div>
  </div>
  <div class="relative">
    {% if background == 'gradient' %}
      <div class="absolute top-0 left-0 size-full gradient-light bg-linear-to-b opacity-25"></div>
    {% endif %}
    <div class="fluid-grid relative">
      {{ include('components/hero-simple-standard/core.twig', {
        short: image ? true : false
      }) }}
      <div class="span-content relative grid grid-cols-subgrid gap-y-6 pt-8 pb-16 lg:pb-20">
        {% if image %}
          <div class="col-span-12 lg:hidden">
            {{ ResponsiveImage(image, {
              class: 'w-full aspect-[1.1] rounded-r-full object-cover',
            }) }}
          </div>
        {% endif %}
        <div
          class="
            col-span-12 wysiwyg
            {% if image %}
              lg:col-span-7
            {% else %}
              lg:col-span-9
            {% endif %}
          "
        >
          {{ wysiwyg }}
          {% if links %}
            <div class="flex flex-wrap mt-6 gap-6">
              {% for item in links %}
                <a
                  class="{{ loop.first ? 'button-primary' : 'button-secondary-alt' }}"
                  href="{{ item.link.url }}"
                  target="{{ item.link.target | default('_self') }}"
                >{{ item.link.title }}</a>
              {% endfor %}
            </div>
          {% endif %}
        </div>
        {% if image %}
          <div class="hidden lg:block lg:col-span-5 lg:-mt-36">
            {{ ResponsiveImage(image, {
              class: 'w-full aspect-[1.1] rounded-r-full object-cover',
            }) }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
