<section class="
  bg-bone
  {% if items|length is odd %}
    py-16
  {% else %}
    py-24
  {% endif %}
">
  <div class="fluid-grid">
    <div
      class="
        grid grid-cols-subgrid gap-y-10 lg:gap-y-16
        {% if items_per_row == 2 %}
          span-xl
        {% else %}
          span-content
        {% endif %}
      "
    >
      <div
        class="
          col-span-full pb-4
          {% if items|length is odd %}
            lg:col-span-5
          {% else %}
            text-center lg:w-1/2 lg:mx-auto
          {% endif %}
        "
      >
        <div class="inline-block">
          <h2 class="text-h3">
            {{ heading }}
          </h2>
          <div class="inline-block w-full h-1 gradient-light bg-linear-to-r my-3"></div>
        </div>
        {% if body %}
          <p class="text-body-large">{{ body }}</p>
        {% endif %}
      </div>
      {% for item in items %}
        <div
          class="
            col-span-full flex gap-x-5
            {% if items_per_row == 2 %}
              lg:col-span-5
            {% else %}
              lg:col-span-3
            {% endif %}
          "
        >
          {% if icons %}
            {{ ResponsiveImage(item.icon, {
              class: 'size-10',
            }) }}
          {% endif %}
          <div class="">
            {% if item.heading_is_link %}
              {{ include('partials/arrow-link-large.twig', item.heading_link) }}
            {% else %}
              <h3 class="text-h5">{{ item.heading }}</h3>
            {% endif %}
            <p class="text-body-medium mt-3">{{ item.body }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
