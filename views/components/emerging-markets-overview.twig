<section class="fluid-grid my-16">
  <div class="span-content grid grid-cols-subgrid gap-y-8">
    <div class="col-span-12 sm:col-span-9 md:col-span-7 lg:col-span-5">
      {{ ResponsiveImage(image, {
        class: 'rounded-r-full object-cover -ml-(--col-gap) max-w-none w-[calc(100%+var(--col-gap))] aspect-[1.1] xl:-ml-32 xl:w-[calc(100%+8rem)]',
        sizes: '(min-width: 1376px) 634px, (min-width: 1024px) 42vw, (min-width: 768px) 59vw, (min-width: 640px) 75vw, , 100vw',
      }) }}
    </div>
    <div class="col-span-12 lg:col-span-7 lg:self-center">
      <h2 class="text-h2 text-balance">{{ heading }}</h2>
      <p class="text-body-medium mt-2.5">{{ body }}</p>
      <div class="h-1 w-full my-6 lg:my-10 gradient-light bg-gradient-to-l"></div>
      <ul class="flex flex-col gap-y-8 md:flex-row md:justify-between ml-5 md:ml-0">
        {% for country in global.emerging_markets %}
          <li class="flex gap-3 lg:flex-col lg:justify-center">
            {{ ResponsiveImage(country.image, {
              class: 'h-6 w-auto object-contain',
              sizes: '100px',
            }) }}
            <p class="text-h5">{{ country.link.title }}</p>
          </li>
        {% endfor %}
      </ul>
      {% if links %}
        <div class="mt-8 lg:mt-12">
          {% for item in links %}
            {% if item.link %}
              {{ include('partials/arrow-link-large.twig', {
                ...item.link,
                link: item.link.url,
              }) }}
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>
