<header
  x-data="{
    mobileMenuOpen: false,
    activeIndex: 0,
  }"
  class="relative after:absolute after:z-10 after:bottom-0 after:left-0 after:h-px after:w-full after:bg-black lg:hidden"
>
  <div class="fluid-grid">
    <div class="span-content h-24 flex items-center justify-between">
      <a
          href="/"
          class="-ml-4 p-4"
        >
          <img
            class="h-8"
            src="{{ theme.path }}/dist/svgs/logo.svg"
            alt="Duravant Logo"
          >
        </a>
        <div class="flex gap-x-4">
          {# <button
            @click="mobileMenuOpen = mobileMenuOpen === 'emergingMarkets' ? false : 'emergingMarkets'"
            class="-mx-4 p-4 transition-colors"
          >
            <div
              x-show="mobileMenuOpen != 'emergingMarkets'"
              x-cloak
            >
              {{ include('svgs/globe.twig', {
                class: 'size-5',
              }) }}
            </div>
            <div
              x-show="mobileMenuOpen == 'emergingMarkets'"
              x-cloak
              class="relative w-5 h-4"
            >
              <div
                class="absolute top-0 left-0 w-6 h-0.5 rounded-full bg-gray-dark rotate-45 translate-y-1.75"
              ></div>
              <div
                class="absolute bottom-0 left-0 w-6 h-0.5 rounded-full bg-gray-dark -rotate-45 -translate-y-1.75"
              ></div>
            </div>
          </button> #}
          <button
            @click="mobileMenuOpen = mobileMenuOpen === 'menu' ? false : 'menu'; activeIndex = 0"
            :aria-expanded="mobileMenuOpen == 'menu'"
            class="p-4 -mr-4"
          >
            <div
              x-text="mobileMenuOpen == 'menu' ? 'Close nav menu' : 'Open nav menu'"
              class="sr-only"
            ></div>
            <div class="relative w-6 h-4">
              <div
                :class="mobileMenuOpen == 'menu' && 'rotate-45 translate-y-1.75'"
                class="absolute top-0 left-0 w-full h-0.5 rounded-full bg-gray-dark transition-transform"
              ></div>
              <div
                :class="mobileMenuOpen == 'menu' && 'opacity-0'"
                class="absolute top-1/2 left-0 w-full h-0.5 rounded-full bg-gray-dark -translate-y-1/2 transition-opacity"
              ></div>
              <div
                :class="mobileMenuOpen == 'menu' && '-rotate-45 -translate-y-1.75'"
                class="absolute bottom-0 left-0 w-full h-0.5 rounded-full bg-gray-dark transition-transform"
              ></div>
            </div>
          </button>
        </div>
    </div>
    <div
      x-show="mobileMenuOpen == 'menu'"
      x-cloak
      x-trap.noscroll="mobileMenuOpen == 'menu'"
      x-transition:enter="transition-opacity duration-300"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
      x-transition:leave="transition-opacity duration-300"
      x-transition:leave-start="opacity-100"
      x-transition:leave-end="opacity-0"
      class="flex flex-col absolute z-40 top-full left-0 w-full h-[calc(100dvh-var(--wp-admin--admin-bar--height,0px)-6rem))] bg-white"
    >
      <div class="flex flex-col h-full overflow-y-auto">
        <div class="fluid-grid">
          <div class="span-content flex flex-col gap-y-4 py-8">
            {% for item in primary_menu.items %}
              <div class="
                {% if loop.first %}
                  -mt-3
                {% endif %}
                {% if loop.revindex == 1 %}
                  -mb-3
                {% endif %}
              ">
                {% if item.children %}
                  <button
                    @click="activeIndex = {{ loop.index }}"
                    class="text-h6 p-3 -ml-3"
                  >{{ item.title }}</a>
                {% else %}
                  {% if item.is_button %}
                    <div class="w-full h-1 gradient-light bg-linear-to-r mb-8"></div>
                    <a
                      class="button-primary"
                      href="{{ item.link }}"
                      target="{{ item.target ?: '_self' }}"
                    >{{ item.title }}</a>
                  {% else %}
                    <a
                      class="block text-h6 p-3 -ml-3"
                      href="{{ item.link }}"
                      target="{{ item.target ?: '_self' }}"
                    >{{ item.title }}</a>
                  {% endif %}
                {% endif %}
              </div>
              {% if item.children %}
                {{ include('components/header/mobile-submenu.twig') }}
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="fluid-grid bg-gray text-white py-10 mt-auto">
          <nav class="span-content">
            <ul class="flex flex-col gap-y-3.5">
              {% for item in utility_menu.items %}
                <li class="">
                  <a
                    href="{{ item.link }}"
                    target="{{ item.target ?: '_self' }}"
                    class="text-body-md hover:underline"
                  >{{ item.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      </div>
    </div>
    {# <div
      x-show="mobileMenuOpen == 'emergingMarkets'"
      x-cloak
      x-trap.noscroll="mobileMenuOpen == 'emergingMarkets'"
      x-transition:enter="transition-opacity duration-300"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
      x-transition:leave="transition-opacity duration-300"
      x-transition:leave-start="opacity-100"
      x-transition:leave-end="opacity-0"
      class="flex flex-col absolute z-40 top-full left-0 w-full h-[calc(100dvh-var(--wp-admin--admin-bar--height,0px)-6rem))] bg-white"
    >
      <div class="h-full overflow-y-auto">
        <div class="fluid-grid">
          <div class="span-content flex flex-col py-8">
            <ul class="space-y-9">
              {% for item in global.emerging_markets %}
                <li class="">
                  <a
                    href="{{ item.link.url }}"
                    class="inline-flex gap-x-3 hover:underline"
                  >
                    {{ ResponsiveImage(item.image, {
                      class: 'w-8 h-6',
                    }) }}
                    <p class="text-body-lg">{{ item.link.title }}</p>
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </div> #}
  </div>
</header>
