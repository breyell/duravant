<header
  x-data="{ openIndex: 0 }"
  class="hidden lg:flex flex-col"
>
  <div class="bg-gray text-white py-4 fluid-grid">
    <nav class="span-content">
      <ul class="flex justify-end gap-x-3.5">
        {% for item in utility_menu.items %}
          <li class="">
            <a
              href="{{ item.link }}"
              target="{{ item.target ?: '_self' }}"
              class="text-body-md hover:text-blue-baby"
            >{{ item.title }}</a>
          </li>
        {% endfor %}
        {# <li
          x-data="{ open: false }"
          class="relative flex flex-col justify-center"
        >
          <button
            @click="open = !open"
            @click.outside="open = false"
            :class="open && 'text-blue'"
            class="ml-2 transition-colors hover:text-blue-baby"
            :aria-label="open ? 'Close emerging markets menu' : 'Open emerging markets menu'"
          >
            {{ include('svgs/globe.twig', {
              class: 'size-5',
            }) }}
          </button>
          <div
