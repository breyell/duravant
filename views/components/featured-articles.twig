<section class="fluid-grid my-12 lg:my-24">
  <div class="span-content grid grid-cols-subgrid gap-y-8">
    {% for article in articles %}
      <article
        class="
          relative col-span-12
          {% if layout == 'thirds' %}
            md:col-span-4
          {% elseif layout == 'sixty-forty' %}
            {% if loop.first %}
              md:col-span-7
            {% elseif loop.index == 2 %}
              md:col-span-5
            {% else %}
              hidden
            {% endif %}
          {% endif %}
        "
      >
        {# {{ ResponsiveImage(article.image, {
          class: '',
        }) }} #}

        <img
          class="
            w-full object-cover aspect-[1.44]
            {% if layout == 'sixty-forty' %}
              {% if loop.first %}
                md:aspect-[1.4384] lg:aspect-[1.4412]
              {% elseif loop.index == 2 %}
                md:aspect-square
              {% endif %}
            {% endif %}
          "
          src="{{ article.image.src }}"
          alt="{{ article.image.alt }}"
        >
        <h2 class="text-h3 mt-6">{{ article.heading }}</h2>
        <div class="w-full h-1 gradient-light bg-linear-to-r my-2.5"></div>
        <p class="text-body-medium">{{ article.body }}</p>
        <div class="mt-2.5">
          {# {{ include('partials/arrow-link-small.twig', {
            title: article.link.title,
            link: article.link.url,
          }) }} #}
          <a
            class="group p-3 -m-3 inline-flex gap-x-1.5 items-center"
            href="{{ article.link.url }}"
          >
            <span class="text-body-medium">{{ article.link.title }}</span>
            <span class="absolute -inset-3 sm:-inset-4 border-4 border-blue opacity-0 transition-opacity group-hover:opacity-100"></span>
            <span class="absolute inset-0"></span>
            {{ include('svgs/arrow-right.twig', { class: 'inline-block size-4 translate-y-0.25 transition-transform group-hover:translate-x-1' }) }}
          </a>

        </div>
      </article>
    {% endfor %}
  </div>
</section>
