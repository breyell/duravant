<section
  class="
    fluid-grid
    {% if background_color == 'bone' %}
      bg-bone
    {% endif %}
  "
>
  {% if image_side == 'left' %}
    <div class="hidden lg:block span-content lg:col-end-[col-7]">
      <div
        class="
          -mx-(--col-gap) lg:h-full lg:-mr-[calc(0.5*var(--col-gap))]
        "
      >
        {{ ResponsiveImage(image, {
          class: 'w-full aspect-[1.4] object-cover lg:aspect-[1.74] lg:h-full',
          sizes: '(min-width: 1376px) 688px, (min-width: 1024px) 50vw, 100vw',
        }) }}
      </div>
    </div>
  {% endif %}
  <div
    class="
      span-content py-16 lg:py-24 lg:px-12 self-center
      {% if image_side == 'left' %}
        lg:col-start-[col-7]
      {% else %}
        lg:col-end-[col-7]
      {% endif %}
    "
  >
    {% if heading %}
      <div class="inline-block">
        <h2 class="text-h4 inline-block">{{ heading }}</h2>
        <div class="w-full h-1 gradient-light bg-linear-to-r my-3"></div>
      </div>
    {% endif %}
    <div class="wysiwyg">{{ wysiwyg }}</div>
    <div class="mt-6 flex gap-6">
      {% for item in links %}
        {{ include('partials/arrow-link-large.twig', {
          ...item.link,
          link: item.link.url
        }) }}
      {% endfor %}
    </div>
  </div>
  <div
    class="
      span-content lg:col-start-[col-7]
      {% if image_side == 'left' %}
        lg:hidden
      {% endif %}
    "
  >
    <div class="-mx-(--col-gap) lg:-ml-[calc(0.5*var(--col-gap))] lg:h-full">
      {{ ResponsiveImage(image, {
        class: 'w-full aspect-[1.4] object-cover lg:aspect-[1.74] lg:h-full',
        sizes: '(min-width: 1376px) 688px, (min-width: 1024px) 50vw, 100vw',
      }) }}
    </div>
  </div>
</section>
